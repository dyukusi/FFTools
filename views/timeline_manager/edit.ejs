<!doctype html>
<html class="no-js" lang="ja">

<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title glot-model="page-title">Title</title>
    <meta name="description" content="TODO ここで書いたことがGoogleの検索結果に表示されるなど、多くの検索エンジンで利用されているので、超慎重に書くべき。">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link rel="manifest" href="site.webmanifest">
    <link rel="apple-touch-icon" href="icon.png">
    <!-- Place favicon.ico in the root directory. このサイトをスマホのデスクトップに配置したときのアイコン画像の設定 -->


    <link rel="stylesheet" href="css/bootstrap.min.css">
    <link rel="stylesheet" href="http://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <link rel="stylesheet" href="css/handsontable.full.min.css"/>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/lightbox2/2.7.1/css/lightbox.css" rel="stylesheet">
    <link rel="stylesheet" href="css/main.css">
</head>


<body>
<div id="top" class="split">
    <div id="left" class="split content split-horizontal">
        <div class="fixing-box" id="movieArea"></div>
    </div>

    <div id="right" class="split content split-horizontal">
        <%
        var jobGroups = [
            {design: "tank", jobs: ["TANK", "PLD", "WAR", "DRK"],},
            {design: "healer", jobs: ["HEALER", "WHM", "SCH", "AST"],},
            {
                design: "dps",
                jobs: ["MELEE", "PHYSICAL_RANGED", "MAGICAL_RANGED", "MNK", "DRG", "NIN", "SAM", "BRD", "MCH", "BLM", "SMN", "RDM"],
            },
        ];

        _.each(jobGroups, function(group) {
        %>
        <div class="card <%= group.design %>">
            <%
            _.each(group.jobs, function(job) {
                var data = Const.FFXIV.JOBS[job];
                var name = data.NAME;
                var skillImages = data.SKILL_IMAGES;
                var jobIconPath = data.ICON ? "img/job/" + job + "/" + data.ICON : null;
                var skillImageDirectoryPath = "img/job/" + job + "/skills/";
            %>
            <div class="card-body">
                <div class="job-title">
                    <% if (jobIconPath) { %>
                    <img class="draggable display_tooltip" src="<%= jobIconPath %>" title="<%= name %>">
                    <% } %>
                    <%= name %>
                </div>
                <br class="clear">
                <div>
                    <%
                    _.each(skillImages, function(image) {
                        var skillPath = skillImageDirectoryPath + image;
                        var toolTipTitle = LANG[image][0];
                    %>
                    <img class="draggable draggable-skill display_tooltip" src="<%= skillPath %>"
                         title="<%= toolTipTitle %>">
                    <% }); %>
                </div>
            </div>

            <% }); %>
        </div>
        <% }); %>

    </div>
</div>

<div id="bottom" class="split content">
    <div id="handsontable" class="split content"></div>
</div>

</body>


